.cu-container {
  display: flex;
  flex: 1;
  flex-basis: auto;
  flex-direction: row;
}

.cu-container.is-vertical {
  flex-direction: column;
}

.cu-aside {
  flex-shrink: 0;
}

.cu-header {
  flex-shrink: 0;
}
.cu-footer {
  flex-shrink: 0;
}
.cu-main {
  flex: 1;
  flex-basis: auto;
  overflow: auto;
}
